@page
@model Hofre.Areas.Admin.Pages.Users.CreateModel
@{
}

<div class="content-body">

    <!-- Page Headings Start -->
    <div class="row justify-content-between align-items-center mb-10">

        <!-- Page Heading Start -->
        <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>افزودن کاربر</h3>
            </div>
        </div><!-- Page Heading End -->
        <!-- Page Button Group Start -->

    </div><!-- Page Headings End -->
    <!-- Add or Edit Product Start -->
    <div class="add-edit-product-wrap col-12">

        <div class="add-edit-product-form">
            <form method="post" enctype="multipart/form-data">


                <div class="row">
                    <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="text" name="Username" placeholder="نام کاربری" required></div>
                    <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="text" name="Password" placeholder="کلمه ی عبور" required></div>
                    <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="email" name="Email" placeholder="ایمیل" required></div>
                    <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="number" name="Phone" placeholder="شماره موبایل"></div>
                    <div class="col-lg-6 col-12 mb-30">
                        <div class="form-group">
                            <label>
                                انتخاب نقش
                            </label>
                            <select asp-items="Model.roles" name="RoleId" class="form-control">
                                <option value="0">انتخاب گروه</option>
                            </select>
                        </div>
                    </div>
                  
              
                </div>


                <h4 class="title">آپلود تصویر پروفایل</h4>
                <div class="product-upload-gallery row flex-wrap">
                    <div class="col-12 mb-30">
                        <input class="file-pond"  name="ProfilePicture" id="file-pond" type="file" />
                    </div>
                </div>
             


                <!-- Button Group Start -->
                <div class="row">
                    <div class="d-flex flex-wrap justify-content-end col mbn-10">
                        <button type="submit" class="button button-outline button-primary mb-10 ml-10 mr-0">ذخیره و انتشار</button>
                    </div>
                </div><!-- Button Group End -->

            </form>
        </div>

    </div><!-- Add or Edit Product End -->

</div><!-- Content Body End -->



