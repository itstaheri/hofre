@page
@model Hofre.Areas.Admin.Pages.Courses.CreateModel
@{
}

<div class="content-body">

    <!-- Page Headings Start -->
    <div class="row justify-content-between align-items-center mb-10">

        <!-- Page Heading Start -->
        <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>افزودن دوره</h3>
            </div>
        </div><!-- Page Heading End -->
        <!-- Page Button Group Start -->

    </div><!-- Page Headings End -->
    <!-- Add or Edit Product Start -->
    <div class="add-edit-product-wrap col-12">

        <div class="add-edit-product-form">
            <form method="post" enctype="multipart/form-data">


                <div class="row">
                    <div class="col-lg-12 col-12 mb-30"><input class="form-control" type="text" name="Subject" placeholder="موضوع" required></div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" name="slug" placeholder="اسلاگ" required></div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" name="teacher" placeholder="مدرس"></div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="number" id="priceInput" name="Price" placeholder="قیمت دوره"></div>
                    <div class="col-12 mb-30"><textarea class="form-control" name="ShortDescription" placeholder="توضیحات کوتاه" required></textarea></div>
                    <div class="col-12 mb-30"><textarea class="form-control summernote" name="Description" placeholder="توضیحات" required></textarea></div>
                    <div class="col-lg-6 col-12 mb-30">
                        <div class="form-group">
                            <label>
                                انتخاب گروه
                            </label>
                            <select asp-items="Model.categories" name="CategoryId" class="form-control">
                                <option value="0">انتخاب گروه</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 mb-30">
                        <div class="form-check">
                            <input class="form-check-input isfree" name="IsFree" type="checkbox" value="true" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                دوره ی رایگان
                            </label>
                        </div>


                    </div>
                    <div class="col-lg-3 mb-30">
                        <div class="form-check">
                            <input class="form-check-input" name="IsFinal" type="checkbox" value="true" id="flexCheckDefault">
                            <label class="form-check-label" for="flexCheckDefault">
                                به اتمام رسیده
                            </label>
                        </div>
                    </div>
                </div>


                <h4 class="title">آپلود تصویر</h4>
                <div class="product-upload-gallery row flex-wrap">
                    <div class="col-12 mb-30">
                        <p class="form-help-text mt-0">آپلود حداکثر 800 × 800 پیکسل و حداکثر اندازه 2 مگابایت.</p>
                        <input name="Picture" type="file" />
                    </div>
                </div>
                <h4 class="title"> آپلود ویدیو مقدمه </h4>
                <div>
                    <div class="col-12 mb-30">
                        <input type="file" name="Video" />
                    </div>
                </div>

                <h4 class="title"> آپلود ویدیو ها</h4>
                <div>
                    <div class="col-12 mb-30">
                        <input type="file" name="CourseVideos" multiple />
                    </div>
                </div>


                <!-- Button Group Start -->
                <div class="row">
                    <div class="d-flex flex-wrap justify-content-end col mbn-10">
                        <button type="submit" class="button button-outline button-primary mb-10 ml-10 mr-0">ذخیره و انتشار</button>
                    </div>
                </div><!-- Button Group End -->

            </form>
        </div>

    </div><!-- Add or Edit Product End -->

</div><!-- Content Body End -->

<script>
     let priceInput = document.getElementById("priceInput");
    document.querySelector(".isfree").addEventListener("click",e=>{
        if(priceInput.attributes.contains("disabled")){
            priceInput.removeAttribute("disabled")
        }
        else
        {
            priceInput.setAttribute("disabled","disabled")

        }

    })
</script>
