        <div class="add-edit-product-form">
            <form method="post" enctype="multipart/form-data">


                <div class="row">
                    <div class="col-lg-12 col-12 mb-30"><input class="form-control" type="text" name="Subject" placeholder="موضوع" required value="@Model.course.Subject"></div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" name="slug" placeholder="اسلاگ" required value="@Model.course.Slug"></div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="text" name="teacher" placeholder="مدرس" value="@Model.course.Teacher"></div>
                    <div class="col-lg-4 col-12 mb-30"><input class="form-control" type="number" id="priceInput" name="Price" placeholder="قیمت دوره" value="@Model.course.Price"></div>
                    <div class="col-12 mb-30"><textarea class="form-control" name="ShortDescription" placeholder="توضیحات کوتاه" required>@Model.course.ShortDescription</textarea></div>
                    <div class="col-12 mb-30"><textarea class="form-control summernote" name="Description" placeholder="توضیحات" required>@Model.course.Description</textarea></div>
                    <div class="col-lg-6 col-12 mb-30">
                        <div class="form-group">
                            <label>
                                انتخاب گروه
                            </label>
                            <select asp-items="Model.categories" name="CategoryId" class="form-control">
                                <option value="@Model.course.CategoryId">@Model.course.CategoryName</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 mb-30">
                        <div class="form-check">
                            @if(Model.course.IsFree)
                            {
                                <input class="form-check-input isfree" name="IsFree" type="checkbox" id="flexCheckDefault"  value="true" checked>

                            }else{
                                <input class="form-check-input isfree" name="IsFree" type="checkbox"  value="true" id="flexCheckDefault" >

                            }
                            <label class="form-check-label" for="flexCheckDefault">
                                دوره ی رایگان
                            </label>
                        </div>


                    </div>
                    <div class="col-lg-3 mb-30">
                        <div class="form-check">
                            @if(Model.course.IsFree)
                            {
                                <input class="form-check-input isfree" name="IsFinal" type="checkbox" id="flexCheckDefault"  value="true" checked>

                            }else{
                                <input class="form-check-input isfree" name="IsFinal" type="checkbox"  value="true" id="flexCheckDefault" >

                            }
                            <label class="form-check-label" for="flexCheckDefault">
                                به اتمام رسیده
                            </label>
                        </div>
                    </div>
                </div>


                <h4 class="title">آپلود تصویر</h4>
                <div class="product-upload-gallery row flex-wrap">
                    <div class="col-12 mb-30">
                        <input name="Picture" type="file" />
                        <img src="~/Media/Course/@Model.course.Subject/@Model.course.PictureName" height="50" width="50"/>

                    </div>
                </div>
                <h4 class="title"> آپلود ویدیو مقدمه </h4>
                <div>
                    <div class="col-12 mb-30">
                        <input type="file" name="Video" />
                        <span>@Model.course.videoName"</span>

                    </div>

                </div>

                <h4 class="title"> آپلود ویدیو ها</h4>
                <div>
                    <div class="col-12 mb-30">
                        <input type="file" name="CourseVideos" multiple />
                    </div>

                </div>


                <!-- Button Group Start -->
                <div class="row">
                    <div class="d-flex flex-wrap justify-content-end col mbn-10">
                        <button type="submit" class="button button-outline button-primary mb-10 ml-10 mr-0">ذخیره و انتشار</button>
                    </div>
                </div><!-- Button Group End -->

            </form>
            <button id="myBtn">ویدیو های آپلود شده</button>

        </div>

    </div><!-- Add or Edit Product End -->

</div><!-- Content Body End -->
<div id="myModal" class="modal">
    <div class="modal-content">
        <ul>
            @foreach (var item in Model.videos)
            {

                <li>
                    <form method="post" asp-page-handler="DeleteVideo">
                        <input type="hidden" name="Id" value="@item.Id">
                        <button type="submit" class="btn btn-danger">X @item.VideoName</button>
                    </form>


                </li>

            }
        </ul>

    </div>

</div>

