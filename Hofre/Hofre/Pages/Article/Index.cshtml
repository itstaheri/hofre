@page
@model Hofre.Pages.Article.IndexModel
@{
}

   <section class="blog-area ptb-100">
            <div class="container">
                <div class="row">
                   

            @foreach(var article in Model.Articles)
            {
                   <div class="col-lg-4 col-md-6">
                        <div class="single-blog-post-box">
                            <div class="post-image">
                                <a href="single-blog-2.html">
                                    <img src="~/Media/Article/@article.Title/@article.Picture" alt="@article.PictureAlt" title="@article.PictureTitle">
                                </a>
                            </div>

                            <div class="post-content">
                                <ul class="post-meta">
                                    <li>@article.CreationDate</li>
                                @foreach(var category in article.ArticleCategories)
                                {
                                     <li><a asp-page="./ArticleCategory" asp-route-id="@category.Id">@category.Name</a></li>
                                }
                            </ul>
                                <h3><a href="single-blog-2.html">@article.Title</a></h3>
                                <a asp-page="/Articledetail" asp-route-slug="@article.Slug" class="read-more-btn">ادامه خواندن <i class="flaticon-left"></i></a>
                            </div>
                        </div>
                    </div>
            
                   }

                    <div class="col-lg-12 col-md-12">
                        <div class="pagination-area text-center">
                            <a href="#" class="next page-numbers"><i class='bx bx-chevrons-right'></i></a>
                            <span class="page-numbers current" aria-current="page">1</span>
                            <a href="#" class="page-numbers">2</a>
                            <a href="#" class="page-numbers">3</a>
                            <a href="#" class="page-numbers">4</a>
                            <a href="#" class="prev page-numbers"><i class='bx bx-chevrons-left'></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </section>