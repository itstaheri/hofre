@page
@model Hofre.Pages.SearchModel
@{
}

<section class="page-title-area page-title-bg1">
    <div class="container">
        <div class="page-title-content">
            <h1 title="حفره">حفره</h1>
        </div>
    </div>
</section>
<section class="player-details-area ptb-100">

    <div class="container">
        <div class="player-details-desc">
            <div class="col-md-12 alert alert-solid-success">
                <a> نتیجه جستجو  @Model.Value</a>

            </div>
            <div class="streams-list">
                <h5>مقالات</h5>

                <div class="row">
                    @foreach (var item in Model.ArticlePage.Articles)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="single-live-stream-item">
                                <img asp-page="./articledetail" asp-route-slug="@item.Slug" src="~/Media/Article/@item.Title/@item.Picture" alt="@item.PictureAlt" title="@item.PictureTitle" height="400" width="400">

                                <div class="content">
                                    <h3><a asp-page="/ArticleDetail"  asp-route-slug="@item.Slug">@item.Title</a></h3>
                                    <ul class="meta">
                                        @foreach (var category in item.ArticleCategories)
                                        {
                                            <li><a asp-page="/Article/Category" asp-route-id="@category.Id">@category.Name</a></li>
                                        }

                                    </ul>
                                </div>

                                <a asp-page="/ArticleDetail" asp-route-slug="@item.Slug" class="link-btn"></a>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="streams-list">
                <h5>دوره ها</h5>

                <div class="row">
                    @foreach (var item in Model.courses)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="single-live-stream-item">
                                <img asp-page="/Course" asp-route-slug="@item.Slug" src="~/Media/Course/@item.Subject/@item.Picture" height="400" width="400">

                                <div class="content">
                                    <h3>@item.Subject</h3>

                                </div>

                                <a asp-page="/Course" asp-route-slug="@item.Slug" class="video-btn"><i class="flaticon-play-button"></i></a>
                                <a asp-page="/Course" asp-route-slug="@item.Slug" class="link-btn"></a>
                            </div>
                        </div>
                    }

                </div>
            </div>
            <div class="col-lg-12 col-md-12">
                <div class="pagination-area text-center">
                    <a href="./?pageId=@(Model.ArticlePage.CurrentPage+1)" class="next page-numbers"><i class='bx bx-chevrons-right'></i></a>
                    @for (int i = 1; i <= Model.ArticlePage.PageCount; i++)
                    {
                        <a href="?pageId=@i" id="pagenumbers" class="page-numbers @((i == Model.ArticlePage.CurrentPage)? "current" : "") ">@i</a>

                    }
                    <a href="/Search?entery=@(Model.Value)?pageId=@(Model.ArticlePage.CurrentPage+1)" class="prev page-numbers"><i class='bx bx-chevrons-left'></i></a>
                </div>
            </div>
        </div>
    </div>
</section>