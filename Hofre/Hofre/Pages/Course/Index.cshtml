@page
@model Hofre.Pages.Course.IndexModel
@{
}
<section class="page-title-area page-title-bg1">
    <div class="container">
        <div class="page-title-content">
            <h1 title="دوره ها">دوره ها</h1>
        </div>
    </div>
</section>
<section class="blog-area ptb-100">
    <div class="container">

        <div class="streams-list">
            <h3> دوره ها</h3>

            <div class="row">
                @foreach (var item in Model.CoursePage.Courses)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="single-live-stream-item">
                            <img asp-page="./Course" asp-route-slug="@item.Slug" src="~/Media/Course/@item.Subject/@item.Picture" height="400" width="400">

                            <div class="content">
                                <h3>@item.Subject</h3>

                            </div>

                            <a asp-page="/Course" asp-route-slug="@item.Slug" class="video-btn"><i class="flaticon-play-button"></i></a>
                            <a asp-page="/Course" asp-route-slug="@item.Slug" class="link-btn"></a>
                        </div>
                    </div>
                }

            </div>
              <div class="col-lg-12 col-md-12">
                <div class="pagination-area text-center">
                    <a href="/Article/index?pageId=@(Model.CoursePage.CurrentPage+1)" class="next page-numbers"><i class='bx bx-chevrons-right'></i></a>
                    @for (int i = 1; i <= Model.CoursePage.PageCount; i++)
                    {
                        <a href="/Article/index?pageId=@i" id="pagenumbers" class="page-numbers @((i == Model.CoursePage.CurrentPage)? "current" : "") ">@i</a>

                    }
                    <a href="/Article/index?pageId=@(Model.CoursePage.CurrentPage-1)" class="prev page-numbers"><i class='bx bx-chevrons-left'></i></a>
                </div>
            </div>
        </div>
    </div>
</section>
